generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model routes {
  id            Int     @id @default(autoincrement())
  route_id      String  @unique
  year          Int
  vessel_type   String
  fuel_type     String
  ghg_intensity Float
  fuel_consumption Float
  distance_km   Int
  total_emissions Float
  is_baseline   Boolean @default(false)
}

model ship_compliance {
  id     Int @id @default(autoincrement())
  ship_id String
  year   Int
  cb_gco2eq Float

  @@unique([ship_id, year], name: "ship_id_year_unique")
}

model bank_entries {
  id Int @id @default(autoincrement())
  ship_id String
  year Int
  amount_gco2eq Float
}

model pools {
  id Int @id @default(autoincrement())
  year Int
  created_at DateTime @default(now())
}

model pool_members {
  id Int @id @default(autoincrement())
  pool_id Int
  ship_id String
  cb_before Float
  cb_after Float
}

model allocations {
  id Int @id @default(autoincrement())
  pool_id Int
  from_ship String
  to_ship String
  amount Float
}
